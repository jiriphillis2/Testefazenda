<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/system_neutral1_100"
    tools:context=".terceiratela">

    <View
        style="@style/ContainerComponents"
        android:layout_width="416dp"
        android:layout_height="106dp"
        android:backgroundTint="@color/Marrom"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/edit_email"
        style="@style/edit_text"
        android:text="Email"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="394dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="561dp" />

    <ImageView
        android:id="@+id/ic_escudolorecuperar"
        android:layout_width="112dp"
        android:layout_height="82dp"
        app:srcCompat="@drawable/ic_escudo"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="203dp" />

    <TextView
        android:id="@+id/id_problemasplogar"
        android:layout_width="202dp"
        android:layout_height="22dp"
        android:text="Problemas para logar?"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="294dp" />

    <TextView
        android:id="@+id/id_inforecuperar"
        android:layout_width="310dp"
        android:layout_height="32dp"
        android:text="Escreva um email e enviaremos um"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="326dp" />

    <TextView
        android:id="@+id/id_inforrecuperarpart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="código de redefinição de senha"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="356dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_enviar"
        style="@style/Button"
        android:text="Enviar"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="461dp" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="CRIE SUA CONTA"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="53dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:tint="#FFFFFF"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="10dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:tint="#FFFFFF"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size"
        tools:layout_editor_absoluteX="369dp"
        tools:layout_editor_absoluteY="10dp" />



</androidx.constraintlayout.widget.ConstraintLayout>